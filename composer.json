{
    "name": "vigihdev/yii2-bridge-active-record",
    "description": "Enhanced Active Record bridge for Yii2 with service container integration, validation, caching, and multilingual support",
    "type": "library",
    "keywords": [
        "yii2",
        "active-record",
        "orm",
        "validation",
        "caching",
        "translation"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "yiisoft/active-record": "dev-master",
        "yiisoft/event-dispatcher": "^1.1",
        "vigihdev/yii2-bridge-validator": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "vigihdev/symfony-bridge-config": "dev-main",
        "vigihdev/yii2-bridge-db": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "VigihDev\\Yii2Bridge\\ActiveRecord\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VigihDev\\Yii2Bridge\\ActiveRecord\\Tests\\": [
                "tests/",
                "tests/src/"
            ]
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "test": "phpunit",
        "server": "php -S localhost:2265 server.php"
    }
}
